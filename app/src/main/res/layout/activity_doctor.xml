<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ListView
        android:id="@+id/listViewPatients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewAppointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:text="Select a patient to view past appointments" />

    <EditText
        android:id="@+id/editTextNewAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new appointment" />

    <Button
        android:id="@+id/buttonSubmitAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Appointment" />
</LinearLayout>